doctype html
a.header(routerLink="/")
  img(src="/assets/images/logo-fundabitat.png")

.links
  ng-container(*ngFor="let item of items")

    a(
      mat-button, [routerLink]="item.link",
      routerLinkActive='active', [routerLinkActiveOptions]="{ exact: true }",
      disableRipple, matRipple, [matRippleColor]="rippleColor"
    ) {{ item.name }}

    a(
      mat-button, *ngFor="let child of item.childs", [routerLink]="child.link",
      routerLinkActive='active', [routerLinkActiveOptions]="{ exact: true }",
      disableRipple, matRipple, [matRippleColor]="rippleColor"
    )
      mat-icon chevron_right
      span {{ child.name }}


